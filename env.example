DATABASE_URL=postgres://timekeeper:timekeeper@localhost:5432/timekeeper
JWT_SECRET=please-generate-a-32-char-minimum-secret-value
JWT_EXPIRATION_HOURS=1
REFRESH_TOKEN_EXPIRATION_DAYS=7
MAX_CONCURRENT_SESSIONS=3
PASSWORD_EXPIRATION_DAYS=90
PASSWORD_HISTORY_COUNT=5
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15
ACCOUNT_LOCKOUT_BACKOFF_ENABLED=true
ACCOUNT_LOCKOUT_MAX_DURATION_HOURS=24
AUDIT_LOG_RETENTION_DAYS=1825
AUDIT_LOG_RETENTION_FOREVER=false
AUDIT_LOG_EXPORT_MAX_ROWS=10000
CONSENT_LOG_RETENTION_DAYS=1825
CONSENT_LOG_RETENTION_FOREVER=false
AWS_REGION=ap-northeast-1
AWS_KMS_KEY_ID=alias/timekeeper-dev
AWS_AUDIT_LOG_BUCKET=timekeeper-audit-logs
AWS_CLOUDTRAIL_ENABLED=true
# COOKIE_SECURE defaults to true if not set. For local dev (HTTP), set to false.
COOKIE_SECURE=false
COOKIE_SAMESITE=Lax
CORS_ALLOW_ORIGINS=http://localhost:8000,http://localhost:8080,http://127.0.0.1:8080
APP_TIMEZONE=Asia/Tokyo
MFA_ISSUER=Timekeeper
RATE_LIMIT_IP_MAX_REQUESTS=100
RATE_LIMIT_IP_WINDOW_SECONDS=60
RATE_LIMIT_USER_MAX_REQUESTS=20
RATE_LIMIT_USER_WINDOW_SECONDS=3600
RATE_LIMIT_USER_STORE_CLEANUP_THRESHOLD=10000

# Database Pool Configuration (optional - defaults shown)
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT=30
DB_IDLE_TIMEOUT=600
DB_MAX_LIFETIME=1800

# Read Replica Configuration (optional)
# If not set, all reads will use the primary DATABASE_URL connection
# Use this for horizontal read scaling in production
# READ_DATABASE_URL=postgres://timekeeper:timekeeper@read-replica-host:5432/timekeeper
